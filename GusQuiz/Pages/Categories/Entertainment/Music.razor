@page "/music"
@inherits QuizBase
@using GusQuiz.Components


<p><a href="/entertainment">Back</a></p>
<div class="container">
    <div class="quiz">
        @if (questionIndex6 < 6)
        {
            <div class="app-title">
                @Questions[musicCount].Category
            </div>
            <div class="quiz-header">
                @Questions[musicCount].NameOfQuestion
            </div>
            <div class="quiz-body">
                @foreach (var option2 in Questions[musicCount].Options)
                {
                    <button class="option-btn" @onclick="Counter"><OptionCard Option="@option2" OnOptionSelected="OptionSelectedSolo"></OptionCard></button>
                }
            </div>
        }
        else
        {
            <div class="app-title">
                @if (player1Score > (6 / 2))
                {
                    <img class="winlose" src="/images/trophy.png" />
                }
                else
                {
                    <img class="winlose"src="/images/clown.png" />
                }
            </div>
            <div class="quiz-header">
                @if (player1Score == 1)
                {
                    <b>You scored @player1Score/@questionIndex6 point!</b>
                }
                else
                {
                    <b>You scored @player1Score/@questionIndex6 points!</b>
                }
            </div>
            <div class="quiz-footer">
                <button class="next-btn" @onclick="@RestartQuiz">Play Again</button>
            </div>
        }
    </div>
</div>

@code {
    public void Counter()
    {
        musicCount++;
    }
}