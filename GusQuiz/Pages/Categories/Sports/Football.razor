@page "/football"
@inherits QuizBase
@using GusQuiz.Components


@*<p><a href="/sports">Back</a></p>
<div class="container">
    <div class="quiz">
        @if (questionIndex < Questions.Count)
        {
                <div class="app-title">
                @Questions[questionIndex].Category
                </div>
                <div class="quiz-header">
                @Questions[questionIndex].NameOfQuestion
                </div>
                <div class="quiz-body">
                @foreach (var option in Questions[questionIndex].Options)
                {
                    <OptionCard Option="@option" OnOptionSelected="OptionSelected"></OptionCard>   
                }
                </div>
        }
        else
        {
                <div class="app-title">
                @if (player1Score > (Questions.Count / 2))
                {
                            <img class="winlose" src="/images/trophy.png" />
                }
                else
                {
                            <img class="winlose"src="/images/clown.png" />
                }
                </div>
                <div class="quiz-header">
                @if (player1score == 1)
                {
                            <b>You scored @player1Score point!</b>
                }
                else
                {
                            <b>You scored @player1Score points!</b>
                }
                </div>
                <div class="quiz-footer">
                    <button class="next-btn" @onclick="@RestartQuiz">Play Again</button>
                </div>
        }
    </div>
</div>*@
