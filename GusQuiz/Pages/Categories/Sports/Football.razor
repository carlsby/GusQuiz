@page "/football"
@inherits QuizBase
@using GusQuiz.Components


<p><a href="/sports">Back</a></p>
<div class="container">
    <div class="quiz">
        @if (questionIndex5 < 5)
        {
            <div class="app-title">
                @Questions[footballCount].Category
            </div>
            <div class="quiz-header">
                @Questions[footballCount].NameOfQuestion
            </div>
            <div class="quiz-body">
                @foreach (var option2 in Questions[footballCount].Options)
                {
                    <button class="option-btn" @onclick="Counter"><OptionCard Option="@option2" OnOptionSelected="OptionSelectedSolo"></OptionCard></button>
                }
            </div>
        }
        else
        {
            <div class="app-title">
                @if (player1Score > (5 / 2))
                {
                    <img class="winlose" src="/images/trophy.png" />
                }
                else
                {
                    <img class="winlose"src="/images/clown.png" />
                }
            </div>
            <div class="quiz-header">
                @if (player1Score == 1)
                {
                    <b>You scored @player1Score/@questionIndex5 point!</b>
                }
                else
                {
                    <b>You scored @player1Score/@questionIndex5 points!</b>
                }
            </div>
            <div class="quiz-footer">
                <button class="next-btn" @onclick="@RestartQuiz">Play Again</button>
            </div>
        }
    </div>
</div>


@code {
    public void Counter()
    {
        footballCount++;
    }
}